/* pages/detail/detail.wxss */
.item{
  background: #fff;
  margin-bottom: 15rpx;
  padding: 25rpx;
}
.date_text{
  color: #888888;
  padding-bottom: 10rpx;
  font-size:26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.img_box{
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.img_box image{
  width: 227rpx;
  height: 227rpx;
  margin: 10rpx 5rpx 0 0;
  border: 1rpx solid #eee;
}
.item_bottom{
  margin-top:20rpx;
  overflow:hidden;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
  font-size:26rpx;
}
.tags_box{
  float: left;
  display: flex;
}
.tag{
  color: #60bc3e;
  margin-right: 18rpx;
}
.jing{
  font-weight:bold;
  color:#888;
  font-style:initial;
}
.item_location{
  float: right;
  color: #888888;
  display: flex;
  justify-content: center;
}
.location_img{
  width: 32rpx;
  height: 32rpx;
  margin-right: 5rpx;
}
.detele-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}