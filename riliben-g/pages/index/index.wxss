/**index.wxss**/
.page_title{
  box-sizing: border-box;
  padding: 10rpx 25rpx 35rpx;
  background: linear-gradient(to top, #090723, white);
}
.logo_title{
  padding: 10rpx 25rpx;
  display: flex;
  align-items: center;
  color:#090723;
}
.logo_title image{
  width: 80rpx;
  height: 80rpx;
  border-radius:50%;
  margin-right: 30rpx;
  box-shadow: 3px 8px 5px #FFFFCD;
}
.weather_title{
  display: flex;
  align-items: center;
  padding: 5rpx 0 0 25rpx;
}
.text{
  color: white;
  font-size: 30rpx;
  font-weight:bold;
}
.item{
  background: #fff;
  margin-bottom: 15rpx;
  padding: 25rpx;
}
.date_text{
  color: #888888;
  padding-bottom: 10rpx;
  font-size:26rpx;
}
.img_box{
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.img_box image{
  width: 227rpx;
  height: 227rpx;
  margin: 10rpx 5rpx 0 0;
  border: 1rpx solid #eee;
}
.item_bottom{
  margin-top:20rpx;
  overflow:hidden;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
  font-size:26rpx;
}
.tags_box{
  float: left;
  display: flex;
}
.tag{
  color: #60bc3e;
  margin-right: 18rpx;
}
.jing{
  font-weight:bold;
  color:#888;
  font-style:initial;
}
.item_location{
  float: right;
  color: #888888;
  display: flex;
  justify-content: center;
}
.location_img{
  width: 32rpx;
  height: 32rpx;
  margin-right: 5rpx;
}
.null-view{
  padding: 100rpx;
  text-align: center;
  background: #fff;
}
.go-add{
  width: 100rpx;
  height: 100rpx;
  margin-top: 50rpx;
}
.total{
  float: right;
  font-size: 26rpx;
  position:absolute;
  right:24rpx;
  line-height: 100%;
}
.total text{
  font-style: italic;
  text-shadow: 1px 3px 2px #FFFFCD;
}
/* 天气插件 */
.weath-index--tianqbox {
  color: #fff;
}
/* 加载更多 */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}